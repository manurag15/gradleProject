<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/errorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D63031"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Error Button"
        android:onClick="showToast"
        />
    <Button
        android:id="@+id/successButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6AB04A"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Success Button"
        android:onClick="showToast"/>
    <Button
        android:id="@+id/infoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5C469"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Info Button"
        android:onClick="showToast"/>
    <Button
        android:id="@+id/warningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8290B"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Warning Button"
        android:onClick="showToast"/>
    <Button
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#616C6F"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Image Button"
        android:onClick="showToast"/>


</LinearLayout>